#include "holberton.h"
/**
* 1st - function that returns the prime number.
* @i: integer.
* @j: integer.
@ Return: integer.
*/

int 1st(int i, int j)
{
	if (j % i == 0)
	{
	return (0);
	}
		if (i < 2)
		{
		return (1);
		}
return (1st(j, i - 1));
}




/**
* is_prime_number - function that returns a prime number.
* @n: integer.
* Return: integer.
*/

int is_prime_number(int n)
{
	if (n == 1)
	{
	return (0);
	}
		if (n < 0)
		{
		return (0);
		}
return (1st(n, n - 1));
}
